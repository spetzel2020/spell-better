<form autocomplete="off" onsubmit="event.preventDefault();">
    <div class="form-group">
        <label for="label">{{localize "SPELL_BETTER.NewCategory.NAME"}}</label>
        <input type="String" name="label" data-dtype="String"/>
    </div>
    <div class="form-group">
        <label for="filter">{{localize "SPELL_BETTER.NewCategory.Filter.LABEL"}}</label>
        <div class="form-fields">
            <select name="filter">
                <option value="">None</option>
                {{#each labelFilterSets}}
                <optgroup label="{{@key}}">
                    {{#each this}}
                        <option value="{{this.filter}}">{{localize this.name}}</option>
                    {{/each}}
                </optgroup>
                {{/each}}
            </select>
        </div>
        <p class="notes">{{localize  "SPELL_BETTER.NewCategory.Filter.HINT"}}</p>
    </div>

    <div class="form-group">
        <label for="useCategory">{{localize "SPELL_BETTER.NewCategory.IncludeInStandard.NAME"}}</label>
        <div class="form-fields">
            <input type="checkbox" name="includeInStandard" {{checked includeInStandard}} data-dtype="Boolean"/>
        </div>    
        <p class="notes">{{{localize "SPELL_BETTER.NewCategory.IncludeInStandard.HINT"}}}</p>
    </div>

    <button type="submit" name="submit">
        <i class="fas fa-save"></i> {{localize 'SETTINGS.Save'}}
    </button>
</form>
